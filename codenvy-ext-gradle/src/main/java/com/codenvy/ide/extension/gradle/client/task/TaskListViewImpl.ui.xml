<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='resources'
             type='com.codenvy.ide.extension.gradle.client.GradleResources'/>

    <g:DockPanel width="100%" height="100%">
        <g:Dock direction="NORTH" height="175px">
            <g:FlowPanel>
                <g:Label height="25px" text="Recent tasks"/>
                <g:FlowPanel ui:field="recentTasksPanel" height="150px"/>
            </g:FlowPanel>
        </g:Dock>
        <g:Dock direction="CENTER">
            <g:DockPanel width="100%" height="100%">
                <g:Dock direction="NORTH" height="25px">
                    <g:Label height="25px" text="All tasks"/>
                </g:Dock>
                <g:Dock direction="CENTER">
                    <g:ScrollPanel width="100%" height="100%">
                        <g:FlowPanel ui:field="allTasksPanel"/>
                    </g:ScrollPanel>
                </g:Dock>
            </g:DockPanel>
        </g:Dock>
    </g:DockPanel>
</ui:UiBinder>