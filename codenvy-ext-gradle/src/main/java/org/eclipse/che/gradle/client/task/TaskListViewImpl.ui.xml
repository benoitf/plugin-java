<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:svgui='urn:import:org.vectomatic.dom.svg.ui'>
    <ui:with field='resources' type='org.eclipse.che.gradle.client.task.TaskListViewImpl.TaskListResources'/>
    <ui:style type="org.eclipse.che.gradle.client.task.TaskListViewImpl.TaskListResources.Css">
        .container-style {
            border: none !important;
        }

        .icon-style > svg {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 140px;
            height: 140px;
            fill: #707070;
            background-color: #5d5d5d;
            border: 1px solid #505050;
        }

        .label-style {
            margin-top: 22px;
            margin-left: auto;
            margin-right: auto;
            text-align: center;
            font-size: smaller;
        }
    </ui:style>
    <g:SimplePanel ui:field="container" addStyleNames="{style.container-style}" debugId="container">
        <g:DockLayoutPanel ui:field="noTasks" unit="PX" height="100%" debugId="noTasks">
            <g:north size="120.0">
                <g:SimplePanel/>
            </g:north>
            <g:north size="140.0">
                <g:HTMLPanel addStyleNames="{style.icon-style}" height="100%" width="100%">
                    <svgui:SVGImage resource='{resources.tree}'/>
                </g:HTMLPanel>
            </g:north>
            <g:center>
                <g:Label ui:field="noTasksCause" addStyleNames="{style.label-style}" debugId="noTasksCause" height="100%"
                         width="70%"/>
            </g:center>
        </g:DockLayoutPanel>
    </g:SimplePanel>
</ui:UiBinder>