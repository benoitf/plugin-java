<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="resources" type="org.eclipse.che.gradle.client.GradleResources"/>
    <ui:with field="localization" type="org.eclipse.che.gradle.client.GradleLocalizationConstant"/>
    <ui:style>
        .rootPanel {
            position: relative;
            text-shadow: 0 1px 0 rgba(0, 0, 0, 0.5);
        }

        .projectNamePosition {
            position: relative;
            line-height: 29px;
        }

        .mainDoc {
            margin: 15px;
        }

    </ui:style>
    <g:FlowPanel width="500px" height="90px" addStyleNames="{style.rootPanel}">
        <g:DockLayoutPanel unit="PX" addStyleNames="{style.mainDoc}">
            <g:north size="50">
                <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                    <g:west size="100">
                        <g:FlowPanel>
                            <g:Label text="{localization.createModuleViewNewModule}" addStyleNames="{style.projectNamePosition}"/>
                        </g:FlowPanel>
                    </g:west>
                    <g:center>
                        <g:FlowPanel>
                            <g:TextBox width="355px" ui:field="moduleNameField" addStyleNames="{resources.getCSS.inputField}"
                                       debugId="moduleNameField"/>
                        </g:FlowPanel>
                    </g:center>
                </g:DockLayoutPanel>
            </g:north>
        </g:DockLayoutPanel>
    </g:FlowPanel>
</ui:UiBinder>