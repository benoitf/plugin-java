<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='resources' type='org.eclipse.che.gradle.client.GradleResources'/>
    <ui:with field='localization' type='org.eclipse.che.gradle.client.GradleLocalizationConstant'/>
    <g:DockLayoutPanel unit="PX" addStyleNames="{resources.getCSS.wizardContentWrapped}">
        <g:north size="100">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" ui:field="configPanel" debugId="configPanel">
                <g:north size="50">
                    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                        <g:west size="138">
                            <g:FlowPanel>
                                <g:Label text="{localization.wizardUseGradleDistribution}"
                                         addStyleNames="{resources.getCSS.projectNamePosition}"/>
                            </g:FlowPanel>
                        </g:west>
                        <g:center>
                            <g:SimplePanel addStyleNames="{resources.getCSS.spaceRight}">
                                <g:ListBox ui:field="gradleType" multipleSelect="false" visibleItemCount="1" selectedIndex="0"
                                           width="511px" height="29px" addStyleNames="{resources.getCSS.field}" debugId="gradleType"/>
                            </g:SimplePanel>
                        </g:center>
                    </g:DockLayoutPanel>
                </g:north>
                <g:north size="50">
                    <g:DockLayoutPanel unit="PX" width="100%" height="100%" ui:field="versionChoosePanel" debugId="versionChoosePanel">
                        <g:west size="138">
                            <g:FlowPanel>
                                <g:Label text="{localization.wizardUseGradleWrapperVersion}"
                                         addStyleNames="{resources.getCSS.projectNamePosition}"/>
                            </g:FlowPanel>
                        </g:west>
                        <g:center>
                            <g:SimplePanel addStyleNames="{resources.getCSS.spaceRight}">
                                <g:ListBox ui:field="gradleVersion" multipleSelect="false" visibleItemCount="1" selectedIndex="0"
                                           width="511px" height="29px" addStyleNames="{resources.getCSS.field}" debugId="gradleVersion"/>
                            </g:SimplePanel>
                        </g:center>
                    </g:DockLayoutPanel>
                </g:north>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="50">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" ui:field="nothingToConfigurePanel" debugId="nothingToConfigurePanel">
                <g:center>
                    <g:Label text="{localization.wizardNothingToConfigure}"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>